<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolherPeriodo">

    <android.support.v7.widget.CardView
        android:id="@+id/CardEscolherP"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/purpuraLara"
        app:cardCornerRadius="50dp"
        app:cardElevation="18dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Escolha seu Periodo:"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnPeriodo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="1º Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Button
                android:id="@+id/btnPeriodo2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="2° Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo1"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo1"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo1" />

            <Button
                android:id="@+id/btnPeriodo3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="3° Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo2"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo2"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo2" />

            <Button
                android:id="@+id/btnPeriodo4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="4° Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo3"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo3"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo3" />

            <Button
                android:id="@+id/btnPeriodo5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="5º Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo4"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo4"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo4" />

            <Button
                android:id="@+id/btnPeriodo6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="6° Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo5"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo5"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo5" />

            <Button
                android:id="@+id/btnPeriodo7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_botao_periodos"
                android:text="7° Periodo"
                android:textStyle="bold"
                android:textColor="@color/purpuraLara"
                app:layout_constraintEnd_toEndOf="@+id/btnPeriodo6"
                app:layout_constraintStart_toStartOf="@+id/btnPeriodo6"
                app:layout_constraintTop_toBottomOf="@+id/btnPeriodo6" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>